@model BiblioApp.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="login-container fade-in">
    <h2><i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión</h2>

    @if (!ViewContext.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle me-2"></i>
            <span>Usuario o contraseña incorrectos. Por favor, intente nuevamente.</span>
        </div>
    }

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Correo">
                <i class="fas fa-envelope me-1"></i> Correo electrónico
            </label>
            <input asp-for="Correo" class="form-control" placeholder="ejemplo@correo.com" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Clave">
                <i class="fas fa-lock me-1"></i> Contraseña
            </label>
            <input asp-for="Clave" type="password" class="form-control" placeholder="Ingrese su contraseña" />
            <span asp-validation-for="Clave" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
        </button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}