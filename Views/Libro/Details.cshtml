@model BiblioApp.Models.Libro

@{
    ViewData["Title"] = "Detalles del Libro";
}

<h1>Detalles</h1>

<div>
    <h4>@Model.Titulo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Model.Autor</dd>
        <dt class="col-sm-2">Editorial</dt>
        <dd class="col-sm-10">@Model.Editorial</dd>
        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Model.ISBN</dd>
        <dt class="col-sm-2">Año</dt>
        <dd class="col-sm-10">@Model.Anio</dd>
        <dt class="col-sm-2">Categoría</dt>
        <dd class="col-sm-10">@Model.Categoria</dd>
        <dt class="col-sm-2">Existencias</dt>
        <dd class="col-sm-10">@Model.Existencias</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
