@model BiblioApp.Models.Libro

@{
    ViewData["Title"] = "Editar Libro";
}

<h2>Agregar Libro</h2>

<form asp-action="Edit" method="post">
    <div class="form-group mb-2">
        <label asp-for="Id"></label>
        <input type="hidden" asp-for="Id"/>
    </div>
    <input type="hidden" asp-for="Id"/>
    <div class="form-group mb-2">
        <label asp-for="Titulo"></label>
        <input asp-for="Titulo" class="form-control"/>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Autor"></label>
        <input asp-for="Autor" class="form-control"/>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Editorial"></label>
        <input asp-for="Editorial" class="form-control"/>
    </div>
    <div class="form-group mb-2">
        <label asp-for="ISBN"></label>
        <input asp-for="ISBN" class="form-control"/>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Anio"></label>
        <input asp-for="Anio" class="form-control"/>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Categoria"></label>
        <input asp-for="Categoria" class="form-control"/>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Existencias"></label>
        <input asp-for="Existencias" class="form-control"/>
    </div>
    <div class="form-group mb-2">
        <label asp-for="ImagenURL"></label>
        <input asp-for="ImagenURL" class="form-control"/>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>